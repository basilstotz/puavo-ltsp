#!/bin/sh

set -eu

images_dir=$1
imageoverlays_dir=$2

old_images=$(/usr/lib/puavo-ltsp-install/ls-old-images "${images_dir}")
if [ -z "${old_images}" ]; then
    exit 0
fi

old_image_filenames=$(echo -n "${old_images}" | xargs -r -d'\n' -L1 basename)
echo "${old_image_filenames}" | while read image_filename; do
    if [ -d "${imageoverlays_dir}/${image_filename}" ]; then
	echo "${imageoverlays_dir}/${image_filename}"
    fi
done
