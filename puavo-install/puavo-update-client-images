#!/bin/sh

usage_error()
{
    echo "error: $1" >&2
    echo "Try '$0 --help' for more information". >&2
    exit 1
}

hosttype=$(cat /etc/puavo/hosttype)

if [ "$hosttype" != "laptop" -a \
     "$hosttype" != "wirelessaccesspoint" ]; then
  echo 'This script should be run only for laptops and wirelessaccesspoints!' \
    > /dev/stderr
  exit 1
fi

use_rate_limit=false

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            shift
            echo "Usage: $0"
            echo
            echo "Update device images."
            echo
            echo "Options:"
            echo "    --use-rate-limit             limit the image download rate"
            echo "    -h, --help                   print help and exit"
            echo
            exit 0
            ;;
        --use-rate-limit)
            shift
            use_rate_limit=true
            break
            ;;
        --)
            shift
            break
            ;;
        -*)
            usage_error "invalid argument '$1'"
            ;;
        *)
            break
            ;;
    esac
done

if [ $# -ne 0 ]; then
    usage_error "invalid number of arguments ($#), expected 0"
fi

set -u

update_ltsp_image() {
  next_imagename=$(jq -r .preferred_image /state/etc/puavo/device.json) \
		     || return

  if $use_rate_limit; then
    rate_limit=$(
      jq -r '.tags[]' /state/etc/puavo/device.json \
        | awk -F: '
            BEGIN { rate_limit = "500k" }
            $1 == "imagedownload-rate-limit" && $2 ~ /^[0-9]+k/ {
	      rate_limit = $2
	    }
            END { print rate_limit }
          ')
  else
    rate_limit=''
  fi

  if [ -n "$rate_limit" ]; then
    update_ltspimage_params="--rate-limit $rate_limit"
  else
    update_ltspimage_params=""
  fi

  if [ -n "$next_imagename" ]; then
    puavo-install-and-update-ltspimages $update_ltspimage_params \
					"${next_imagename}.img"
  fi
}

update_ltsp_image || true
