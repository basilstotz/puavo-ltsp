#!/bin/bash

set -eu

puavo_hostname=$(cat /etc/puavo/hostname)
kvm_name="${puavo_hostname}-testclient"
kvm_uuid=$(uuidgen)
kvm_mac='aa:cc'

for _ in {1..4}; do
    printf -v kvm_mac '%s:%02x' "${kvm_mac}" $(($RANDOM % 255))
done

tmpdir=

trap '[ -n "${tmpdir}" ] && rm -rf "${tmpdir}"' EXIT

tmpdir=$(mktemp -d --tmpdir)

xmlfile="${tmpdir}/${kvm_name}.xml"

cat <<EOF >"${xmlfile}"
<domain type='kvm'>
  <name>${kvm_name}</name>
  <uuid>${kvm_uuid}</uuid>
  <memory unit='KiB'>524288</memory>
  <currentMemory unit='KiB'>524288</currentMemory>
  <vcpu placement='static'>1</vcpu>
  <os>
    <type arch='x86_64' machine='pc-1.0'>hvm</type>
    <boot dev='network'/>
  </os>
  <features>
    <acpi/>
    <apic/>
    <pae/>
  </features>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <emulator>/usr/bin/kvm</emulator>
    <controller type='usb' index='0'>
    </controller>
    <controller type='ide' index='0'>
    </controller>
    <interface type='bridge'>
      <mac address='${kvm_mac}'/>
      <source bridge='ltsp0'/>
      <model type='e1000'/>
    </interface>
    <serial type='pty'>
      <target port='0'/>
    </serial>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>
    <video>
      <model type='vga' vram='8192' heads='1'>
        <acceleration accel3d='no' accel2d='yes'/>
      </model>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x02' function='0x0'/>
    </video>
    <memballoon model='virtio'>
    </memballoon>
  </devices>
</domain>
EOF

virsh define "${xmlfile}"

read -p "Username: " username
read -s -p "Password: " password

echo

curl --user "${username}:${password}" \
    --silent --show-error \
    https://kehitys.opinsys.fi/users/schools.json >"${tmpdir}/schools.json"

school_id=$(jq -r '.[] | select(.name == "Administration").puavo_id' "${tmpdir}/schools.json")

if [ -z "${school_id}" ]; then
    echo "error: could not resolve puavo_id of 'Administration' school" >&2
    exit 1
fi

curl --user "${username}:${password}" \
    --silent --show-error \
    --max-time 3 \
    -H 'Content-Type: application/json' \
    -H 'Accept: application/json' \
    -X POST -d "
{
  \"puavoHostname\": \"${kvm_name}\",
  \"macAddress\": \"${kvm_mac}\",
  \"puavoDeviceType\": \"fatclient\",
  \"classes\": [\"puavoNetbootDevice\"]
}" "https://kehitys.opinsys.fi/devices/${school_id}/devices.json" >"${tmpdir}/device.json"

if [ "${kvm_name}" != "$(jq -r .puavoHostname "${tmpdir}/device.json")" ]; then
    echo "error: $(jq -r .puavoHostname[] "${tmpdir}/device.json")" >&2
    exit 1
fi
