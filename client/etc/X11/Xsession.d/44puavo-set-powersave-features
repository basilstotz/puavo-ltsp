# On laptops, turn display off after five minutes of inactivity.
# Also on laptops, if on battery power and inactive for twenty minutes,
# do go to sleep.

PUAVO_HOSTTYPE=$(cat /etc/puavo/hosttype)

case "$PUAVO_HOSTTYPE" in
  laptop)
    dconf write /org/gnome/settings-daemon/plugins/power/sleep-inactive-battery-timeout \
                1200
    dconf write /org/gnome/desktop/session/idle-delay \
                "uint32 300"
    ;;
esac
