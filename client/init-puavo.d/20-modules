# Load extra modules here, in case they affect other plugins
for module in $(env|grep ^MODULE_|sed -e s/^MODULE_[0-9]*\=//|sed -e s/\ /*/g);do
    modprobe $(echo $module|tr "*" " ")
done

# Broadcom Corporation BCM4311 802.11b/g WLAN (rev 01) requires b43 to
# work. Used at least in HP Compaq nx6310 models.
if [ -n "$(lspci -d 14e4:4311)" ]; then
   modprobe b43
fi
